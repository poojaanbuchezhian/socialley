<h2><%= link_to 'Your Blog Posts',blog_posts_path(@blog) %>: Add a new post</h2>
<%= form_for [@blog, @post] do |f| %>
	<fieldset>
		<legend>Blog Post Details</legend>
		<%= render :partial => "form", :locals => {:f => f} %>
		<%= f.submit "Create", :disable_with => 'Saving...' %>
	</fieldset>
<% end %>
